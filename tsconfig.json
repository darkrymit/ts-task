{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "sourceMap": true,
    "target": "ES2022",
    "module": "ES2022",
    "importHelpers": true,
    "downlevelIteration": true,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}